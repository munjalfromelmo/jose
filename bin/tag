#!/usr/bin/env bash
#echo "Comment the exit line to create and push tags. Please confirm the tag numbers"
#exit 0;

majorVersion=6
minorVersion=2
patchVersion=1

newFullVersion=v$majorVersion.$minorVersion.$patchVersion

git tag --delete $newFullVersion
if [ $? = 0 ]; then
    git push --delete origin $newFullVersion
fi

git tag $newFullVersion
git push origin $newFullVersion
